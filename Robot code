#pragma config(Motor,  port4,           Conveyer1,     tmotorNormal, openLoop)
#pragma config(Motor,  port5,           Line2,         tmotorNormal, openLoop)
#pragma config(Motor,  port6,           Right_Wheels,  tmotorNormal, openLoop)
#pragma config(Motor,  port7,           Left_Wheels,   tmotorNormal, openLoop)
#pragma config(Motor,  port8,           Arm,           tmotorNormal, openLoop)
#pragma config(Motor,  port10,          ,              tmotorNormal, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

#pragma competitionControl(Competition)
#pragma autonomousDuration(20)
#pragma userControlDuration(120)

void Unfold()
{  
  motor[Arm] = -30;  
  wait1Msec(1000); 
  motor[Conveyer1] = 10;  
  motor[Conveyer2] = 10;  
  wait1Msec(550);
}
  // unfold the arm and extends the conveyer belt to full length.
 // wheels circumference is 13 and 10/16 inches 13.625 inches.
// small gear 36 teeth, medium gear 60 teeth
// 2286.248 degree rotation to reach across 1 block
void Score()
{  
  motor[Left_Wheels] = 10;  
  motor[Right_Wheels] = 10;  
  wait1Msec(170);
  //move foward  
  motor[Left_Wheels] = 10;  
  motor[Right_Wheels] = -10;  
  wait1Msec(135);
  //rotate 360 degrees  
  motor[Line1] = 10;  
  motor[Line2] = 10;  
  wait1Msec(230);
  //start conveyer to score  
  motor[Line1] = -10;  
  motor[Line2] = -10;  
  wait1Msec(230);
  //return conveyer to original position
  }
 
void Test()
{
  
}
  
task autonomous()
{  
  Unfold(); 
  Score();
}
task drivercontrol()
{  
  while(true)  
  {    
    Test();  
  }    
} 
task main()
{
  Unfold();
  
}
